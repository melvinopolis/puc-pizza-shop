<div class="jumbotron">
  <center>
    <h1><%= @pizza.name %></h1>
    <%= image_tag @pizza.image, class: "img-responsive" %>
  </center>
  
  <h3>Crust: <%= @pizza.crust %></h3>
  <h3>Sauce: <%= @pizza.sauce %></h3>
  <h3>Toppings: <%= @pizza.toppings %></h3>
  <h3>Cost: $<%= @pizza.cost %></h3>
  
  <%= link_to 'Edit', edit_pizza_path(@pizza) %> |
  <%= link_to 'Back', pizzas_path %>

</div>

